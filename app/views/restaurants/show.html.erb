<div class="banner" style= "
  <% if @restaurant.photo.attached? %>
    background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= cl_image_path @restaurant.photo.key %>); text-align: center;
  <% else %>
  background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= image_path 'restaurant_banner.jpg' %>); text-align: center;
  <% end %>">
</div>

<div class="container justify-content-center mt-5 mb-5">
  <h1>Welcome to <%= @restaurant.name %>!</h1>
  <h2>Our Philosophy</h2>
  <p><%= @restaurant.description %></p>
</div>

<div class="container">
  <div class="row justify-content-center">
    <h1>Our Home Cooking Experiences</h1>
  </div>
  <div class="container mt-7">
    <%= render "shared/meals_show", meals: @restaurant.meals, order_item: @order_item %>
  </div>
</div>

